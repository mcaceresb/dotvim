snippet tikzgame "Game Theory Tree (figure + tikz + node[player] + children)" w
\begin{figure}[!ht]
	\centering
	\begin{tikzpicture}[grow=${1:right}, sloped, scale=1]
		\node[player]{${4:Root}}
			child {
				$5
				edge from parent node[${6:above}] {${7:action}}
			}
			%
			child {
				$8
				edge from parent node[${9:above}] {${10:action}}
			};$11
	\end{tikzpicture}
	\caption{${2}}
	\label{fig:${3:${2/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\L$1$2$3\E)/ga}}}
\end{figure}
$0
endsnippet

snippet player "Game Theory Player (node[player] + child)" w
node[player] ${1:(nodea)} {${2:P1}}
	child {
		$3
		edge from parent node[${4:above}] {${5:action}}
	}$0
endsnippet

snippet end "Game Theory End Node (node[end,...])" w
node[end, label=${1:right}:{(${2:x, y})}] {}$0
endsnippet

snippet child "Game Theory Child (child{...})" w
child {
	$1
	edge from parent node[${2:above}] {${3:action}}
}$0
endsnippet

snippet gamedown "Game Theory Down Style" w
\tikzstyle{level 1}=[level distance=3.5cm, sibling distance=7cm]
\tikzstyle{level 2}=[level distance=3.5cm, sibling distance=3.5cm]
endsnippet

snippet gameright "Game Theory Right Style" w
\tikzstyle{level 1}=[level distance=3.5cm, sibling distance=3.75cm]
\tikzstyle{level 2}=[level distance=3.5cm, sibling distance=2.75cm]
\tikzstyle{level 3}=[level distance=3.5cm, sibling distance=1.75cm]
\tikzstyle{level 4}=[level distance=3.5cm, sibling distance=0.75cm]
endsnippet

