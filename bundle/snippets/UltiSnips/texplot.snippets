	\begin{tikzpicture}
		\begin{axis}[name=plot1
			,title={${1}}
			,width=9cm
			,height=8cm
			,ymin=0
			,ymax=6
			,xmin=0
			,xmax=6
			,domain=0:6
			%,ylabel=$y$
			%,xlabel=$x$
