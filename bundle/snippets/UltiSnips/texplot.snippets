# Tikz and plots
snippet plot "pfgplots plot" w
\addplot [${1:smooth}] {${2:x}}${0:;}
endsnippet

snippet node "pgfplots node" w
node[${1:above}] at (axis cs:${2:x}, ${3:y}) {${4:text}}${0:;}
endsnippet

snippet draw "pgfplots drawing" w
\draw [${1:->}${2:, >=latex}]
	(axis cs:${3:x}, ${4:y}) ${5:--} (axis cs:${6:x}, ${7:y}) ${0:;}
endsnippet

snippet plotc "pgfplot coordinates" w
\addplot [${1:only marks}, mark=${2:*}] coordinates {(${3:x, y}) ${4:(x, y)}}${0:;}
endsnippet

snippet plott "pgfplot coordinates" w
\addplot [${1:fill=red}${2:, opacity=0.5}] table {
	${3:x y}
	${4:x y}
	${5:x y}
	${6:x y}
}${0:;}
endsnippet

snippet post "Postaction decorations" w
[postaction={decorate, decoration={markings, mark=between positions ${1:2/10} and ${2:10/10} step ${3:2/10} with ${4:{\arrow[line width=1pt]{latex};}}}}]${0:;}
endsnippet

snippet nodet "Tikz node" w
node[${1:above}] at (${2:x}, ${3:y}) {${4:text}}${0:;}
endsnippet

snippet drawt "Tikz drawing" w
\draw [${1:->}${2:, >=latex}]
	(${3:x}, ${4:y}) ${5:--} (${6:x}, ${7:y}) ${0:;}
endsnippet

