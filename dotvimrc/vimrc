" Created: Thu Jun  4 03:16:32 EDT 2015
" Updated: Sat May 14 15:34:05 EDT 2016
" Purpose: Preferred Vim Settings (full)

" Startup: Source plugins, options, config, etc.

" Enable syntax, plug-ins
filetype plugin indent on
syntax enable

" So all <Leader> and <LocalLeader> mappings are done correctly
let mapleader = ","
let maplocalleader = "\\"

" Source plug-ins and configure them
source $HOME/Documents/code/dotvim/dotvimrc/vimrc-plugins
source $HOME/Documents/code/dotvim/dotvimrc/vimrc-plugins-config

" Configure Vim to your liking and source your mappings
source $HOME/Documents/code/dotvim/dotvimrc/vimrc-lean
source $HOME/Documents/code/dotvim/dotvimrc/vimrc-mappings
source $HOME/Documents/code/dotvim/dotvimrc/vimrc-functions

" Use this instead of any of the fonts below if in the server
if has("gui_running")
    if has("gui_gtk2")
        set guifont=Monospace\ 11
    elseif has("gui_win32")
        set guifont=Consolas:h11:cANSI
    endif
endif

" Otherwise, pick your fave font
set guifont=Anonymice\ Powerline\ 10
set guifont=Cousine\ for\ Powerline\ 10
set guifont=DejaVu\ Sans\ Mono\ for\ Powerline\ 10
set guifont=Droid\ Sans\ Mono\ for\ Powerline\ 10
set guifont=Droid\ Sans\ Mono\ Dotted\ for\ Powerline\ 10
set guifont=Droid\ Sans\ Mono\ Slashed\ for\ Powerline\ 10
set guifont=Fira\ Mono\ for\ Powerline\ 10
set guifont=Liberation\ Mono\ for\ Powerline\ 10
set guifont=Meslo\ for\ Powerline\ 10
set guifont=Monofur\ for\ Powerline\ 10
set guifont=Roboto\ Mono\ for\ Powerline\ 10
set guifont=Symbol\ Neu\ for\ Powerline\ 10
set guifont=Hack\ 10
set guifont=Ubuntu\ Mono\ derivative\ Powerline\ 11
set guifont=Droid\ Sans\ Mono\ for\ Powerline\ 10
set guifont=Source\ Code\ Pro\ for\ Powerline\ 10
set guifont=Inconsolata\ for\ Powerline\ 11
set guifont=Inconsolata-dz\ for\ Powerline\ 10
set guifont=Inconsolata-g\ for\ Powerline\ 10
