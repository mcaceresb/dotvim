" Created: Thu Jun  4 03:16:32 EDT 2015
" Updated: Sat May 14 15:34:05 EDT 2016
" Purpose: Preferred Vim Settings (full)

" Startup: Source plugins, options, config, etc.

" Enable syntax, plug-ins
filetype plugin indent on
syntax enable
set t_Co=256
set background=light

" So all <Leader> and <LocalLeader> mappings are done correctly
let mapleader = ","
let maplocalleader = "\\"

" Source plug-ins and configure them
source $HOME/dotvim/dotvimrc/vimrc-plugins
source $HOME/dotvim/dotvimrc/vimrc-plugins-config

" Configure Vim to your liking and source your mappings
source $HOME/dotvim/dotvimrc/vimrc-lean
source $HOME/dotvim/dotvimrc/vimrc-mappings
source $HOME/dotvim/dotvimrc/vimrc-functions

" Default font
set guifont=Monospace\ 11
set guifont=Inconsolata-g\ for\ Powerline\ 10
